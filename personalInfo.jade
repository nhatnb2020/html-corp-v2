        script(src="js/libs/jquery.min.js")
        script(src="js/main.js")
        script.
            $('.nav-sub').click(function () {
                $(this).toggleClass('open');
            });
        script.
            $('.stTab .dropdown-item').click(function (event) {
                $('#noDeletePopup').modal();
            });
        script.
            $('.switch input').on('change', function (event, state) {
                var spanText = $(this).parents('.btnSwitch').find('.spanText');
                var levelForm = $(this).parents('.vntBox').find('.levelForm');
                var levelNoti = $(this).parents('.vntBox').find('.levelNoti');
                if ($(this).is(':checked')) {
                    spanText.text('Giới hạn hạn mức');
                    levelForm.css('display', 'block');
                    levelNoti.css('display', 'none');
                } else {
                    spanText.text('Không giới hạn hạn mức');
                    levelForm.css('display', 'none');
                    levelNoti.css('display', 'block');

                    $('#confirmPopup').modal();
                }
            });
        script.
            $('.btnAddSetting').click(function (event) {
                $(this).parents('.levelForm__item').find('.levelForm__row').addClass('open');
                $(this).css('display', 'none');
            });
        script.
            var stNavbar = $(".stNavbar").offset().top;
            $(window).scroll(function () {
                var scroll = $(window).scrollTop();
                if (scroll >= stNavbar) {
                    $(".stNavbar").addClass('fixedTop');
                } else {
                    $(".stNavbar").removeClass('fixedTop');
                }
            });






