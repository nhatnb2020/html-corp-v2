- var page = "member";
doctype html
html(lang="vi")
    head
        include jades/includes/_head
    body(ontouchstart='')
        section.pageBody
            include jades/includes/_sidebar
            main.main
                section.vntHeader
                    .vntHeader__left
                        ul.breadcrumb
                            li
                                a(href='#') Thành viên
                            li.active Thêm thành viên
                        h2.heading2 Thêm Thành viên
                    include jades/includes/_vntHeader__account
                section.vntContent
                    .memberForm
                        .form-group
                            label Danh xưng
                            .radioInline
                                .radio
                                    input(type='radio' id='gender1' name='gender')
                                    label(for='gender1') Ông


                                .radio
                                    input(type='radio' id='gender2' name='gender')
                                    label(for='gender2') Bà


                        .form-group
                            label Họ và tên
                            input.form-control(type='text' placeholder='Nhập họ và tên thành viên')
                        .form-group
                            label Bộ phận
                            .dropdown
                                button.dropdown-toggle(type='button', data-toggle='dropdown')
                                    span Chọn bộ phận
                                    svg(width='12', height='8', viewBox='0 0 12 8', fill='none', xmlns='http://www.w3.org/2000/svg')
                                        path(d='M11.8125 0H10.6406C10.5609 0 10.4859 0.0390626 10.439 0.103125L5.99995 6.22188L1.56089 0.103125C1.51402 0.0390626 1.43902 0 1.35933 0H0.187454C0.0858913 0 0.0265163 0.115625 0.0858913 0.198438L5.59527 7.79375C5.79527 8.06875 6.20464 8.06875 6.40308 7.79375L11.9125 0.198438C11.9734 0.115625 11.914 0 11.8125 0Z', fill='#8C8C8C')

                                ul.dropdown-menu
                                    li.dropdown-item.active Kế toán
                                    li.dropdown-item Kinh doanh
                                    li.dropdown-item Tech
                                    li.dropdown-item TMC
                        .form-group
                            label Email
                            input.form-control(type='text' placeholder='Nhập địa chỉ email')
                        .form-group
                            label Chức vụ
                            .dropdown
                                button.dropdown-toggle(type='button', data-toggle='dropdown')
                                    span Chọn chức vụ
                                    svg(width='12', height='8', viewBox='0 0 12 8', fill='none', xmlns='http://www.w3.org/2000/svg')
                                        path(d='M11.8125 0H10.6406C10.5609 0 10.4859 0.0390626 10.439 0.103125L5.99995 6.22188L1.56089 0.103125C1.51402 0.0390626 1.43902 0 1.35933 0H0.187454C0.0858913 0 0.0265163 0.115625 0.0858913 0.198438L5.59527 7.79375C5.79527 8.06875 6.20464 8.06875 6.40308 7.79375L11.9125 0.198438C11.9734 0.115625 11.914 0 11.8125 0Z', fill='#8C8C8C')

                                ul.dropdown-menu
                                    li.dropdown-item.active Trưởng phòng
                                    li.dropdown-item Phó phòng
                                    li.dropdown-item Nhân viên
                                    li.dropdown-item Leader
                        .form-group
                            label Số điện thoại
                            input.form-control(type='text' placeholder='Nhập số điện thoại')
                        .form-group
                            label Vai trò
                            .dropdown
                                button.dropdown-toggle(type='button', data-toggle='dropdown')
                                    span Chọn vai trò
                                    svg(width='12', height='8', viewBox='0 0 12 8', fill='none', xmlns='http://www.w3.org/2000/svg')
                                        path(d='M11.8125 0H10.6406C10.5609 0 10.4859 0.0390626 10.439 0.103125L5.99995 6.22188L1.56089 0.103125C1.51402 0.0390626 1.43902 0 1.35933 0H0.187454C0.0858913 0 0.0265163 0.115625 0.0858913 0.198438L5.59527 7.79375C5.79527 8.06875 6.20464 8.06875 6.40308 7.79375L11.9125 0.198438C11.9734 0.115625 11.914 0 11.8125 0Z', fill='#8C8C8C')

                                ul.dropdown-menu
                                    li.dropdown-item.active Người duyệt
                                    li.dropdown-item Người đi
                                    li.dropdown-item Người đặt
                        .form-group
                            label Mã nhân viên
                            input.form-control(type='text' placeholder='Mã nhân viên')
                        .form-group
                            .btnSwitch
                                label.switch
                                    input(type='checkbox', checked='')
                                    span.slider
                                span Hoạt động
                        .form-group
                            .checkbox
                                input#send(type='checkbox')
                                label(for='send') Gửi xác nhận
                    .memberBtnGroup
                        button.btnRemove(type='button')
                            svg(width='12', height='14', viewBox='0 0 12 14', fill='none', xmlns='http://www.w3.org/2000/svg')
                                path(d='M3.625 1.875H3.5C3.56875 1.875 3.625 1.81875 3.625 1.75V1.875H8.375V1.75C8.375 1.81875 8.43125 1.875 8.5 1.875H8.375V3H9.5V1.75C9.5 1.19844 9.05156 0.75 8.5 0.75H3.5C2.94844 0.75 2.5 1.19844 2.5 1.75V3H3.625V1.875ZM11.5 3H0.5C0.223437 3 0 3.22344 0 3.5V4C0 4.06875 0.05625 4.125 0.125 4.125H1.06875L1.45469 12.2969C1.47969 12.8297 1.92031 13.25 2.45312 13.25H9.54688C10.0813 13.25 10.5203 12.8313 10.5453 12.2969L10.9312 4.125H11.875C11.9438 4.125 12 4.06875 12 4V3.5C12 3.22344 11.7766 3 11.5 3ZM9.42656 12.125H2.57344L2.19531 4.125H9.80469L9.42656 12.125Z', fill='#F5222D')
                            span Xóa tài khoản
                        .memberBtnAction
                            button.btn.btn_outline(type='button') Huỷ
                            button.btn(type='button') Thêm thành viên


        script(src="js/libs/jquery.min.js")
        script(src="js/libs/slick.min.js")
        script(src="js/main.js")
        script.
            $('.nav-sub').click(function () {
                $(this).toggleClass('open');
            });





